@model IEnumerable<SzczesliwyPlecak.Models.Trip>

@{
    ViewData["Title"] = "Szczęśliwy Plecak";
}

<h1>Szczęśliwy Plecak</h1>

<p>
    <a asp-action="Create">Utwórz nową wycieczkę</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Data
            </th>
            <th>
                Czas trwania
            </th>
            <th>
                Czas marszu
            </th>
            <th>
                Uczestnicy
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var shortDate = item.StartDate.ToShortDateString().Remove(6, 2);
    var participantsNo = item.FemaleParticipants + item.MaleParticipants;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @shortDate
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationInDays) dni
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTimeHiking) h
            </td>
            <td>
                @participantsNo
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
