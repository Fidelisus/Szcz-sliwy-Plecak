@model SzczesliwyPlecak.Models.Trip

@{
    ViewData["Title"] = "Usuń wycieczkę";
    var shortDate = Model.StartDate.ToShortDateString().Remove(6, 2);
}

<h3>Czy na pewno chcesz usunąć tą wycieczkę?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @shortDate
        </dd>
        <dt class = "col-sm-2">
            Czas trwania
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DurationInDays) dni
        </dd>
        <dt class = "col-sm-2">
            Łączny czas marszu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaloriesNeeded) h
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń wycieczkę" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy wycieczek</a>
    </form>
</div>
