@model SzczesliwyPlecak.Models.ProductForm

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj produkty</h1>
<h3> @ViewData["Added"] </h3>
<hr />
<div class="row">
    <form asp-action="AddProducts" asp-route-tripId="@ViewData["TripId"]">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dl class="row">
            <dd class="col-sm-8">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </dd>
            <dd class="col-sm-4"></dd>
            <dd class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Calories" class="control-label"></label>
                    <input asp-for="Calories" class="form-control" />
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fat" class="control-label"></label>
                    <input asp-for="Fat" class="form-control" />
                    <span asp-validation-for="Fat" class="text-danger"></span>
                </div>
            </dd>
            <dd class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Carbohydrates" class="control-label"></label>
                    <input asp-for="Carbohydrates" class="form-control" />
                    <span asp-validation-for="Carbohydrates" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Proteins" class="control-label"></label>
                    <input asp-for="Proteins" class="form-control" />
                    <span asp-validation-for="Proteins" class="text-danger"></span>
                </div>
            </dd>
            <dd class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </dd>
            <dd class="col-sm-4">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </dd>
        </dl>
    </form>
</div>
<div>
    <a asp-action="Details" asp-route-id="@ViewData["TripId"]">Back to List</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Waga
        </th>
        <th>
            Kalorie
        </th>
        <th>
            Białko
        </th>
        <th>
            Węglowodany
        </th>
        <th>
            Tłuszcz
        </th>
        <th>
            Ilość
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    
    <h3>Lista produktów w bazie danych</h3>

    @foreach (var item in (IEnumerable<Product>) @ViewData["ProductList"])
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Weight
            </td>
            <td>
                @item.Calories
            </td>
            <td>
                @item.Proteins
            </td>
            <td>
                @item.Carbohydrates
            </td>
            <td>
                @item.Fat
            </td>
            <td>
                <form asp-action="AddProducts">
                    <input type="hidden" name="tripId" value="@ViewData["TripId"]">
                    <input type="hidden" name="Id" value="@item.Id">
                    <input type="text" name="Quantity">
                    <input type="submit" value="Dodaj"/>
                </form>
            </td>
            <td>
                <a asp-action="DeleteProductFromList" asp-route-productId="@item.Id" asp-route-tripId="@ViewData["TripId"]">Usuń z bazy danych</a>
            </td>

        </tr>
    }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
