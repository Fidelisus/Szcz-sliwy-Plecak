        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FibreNeeded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FibreNeeded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProteinsNeeded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProteinsNeeded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaltNeeded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaltNeeded)
        </dd>
    </dl>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-12">
            <a asp-action="AddProducts" asp-route-tripId="@Model.Id">Dodaj produkty</a>
        </dt>

        @if (Model.TripProducts != null)
        {
            @foreach (var item in Model.TripProducts)
            {
                <dt class="col-sm-12">
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </dt>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
